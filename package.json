{
  "name": "promise-cachex",
  "version": "1.7.0",
  "description": "A simple promise cache",
  "main": "dist-cjs/index.js",
  "module": "dist-esm/index.js",
  "types": "dist-types/index.d.ts",
  "sideEffects": false,
  "exports": {
    "types": "./dist-types/index.d.ts",
    "import": "./dist-esm/index.js",
    "require": "./dist-cjs/index.js"
  },
  "scripts": {
    "build:es": "node ./esbuild.es.js",
    "build:cjs": "node ./esbuild.cjs.js",
    "build:types": "tsc -b tsconfig.types.json",
    "build:clear": "rimraf -g dist-* && rimraf -g *.tsbuildinfo",
    "build": "npm run build:types && npm run build:es && npm run build:cjs",
    "test": "jest",
    "test:cover": "jest --coverage",
    "prepare": "husky",
    "lint:check": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "benchmarks": "npx ts-node ./benchmarks/promiseCacheX.benchmark.ts",
    "prepublishOnly": "npm run build",
    "lint-staged": "lint-staged",
    "release": "release-it"
  },
  "keywords": [
    "promise",
    "cache",
    "typescript"
  ],
  "author": "Alexiuc Alex",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexalexiuc/promise-cachex.git"
  },
  "files": [
    "dist-esm",
    "dist-cjs",
    "dist-types",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.16.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "tinybench": "^6.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.0"
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": ":sparkles: New Features"
            },
            {
              "type": "fix",
              "section": ":bug: Bug Fixes"
            },
            {
              "type": "test",
              "hidden": true
            },
            {
              "type": "chore",
              "hidden": true
            },
            {
              "type": "refactor",
              "hidden": true
            },
            {
              "type": "perf",
              "hidden": true
            },
            {
              "type": "docs",
              "hidden": true
            }
          ],
          "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commits/{{hash}}",
          "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/branches/compare/{{currentTag}}%0D{{previousTag}}#diff"
        }
      }
    }
  },
  "lint-staged": {
    "packages/**/src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
